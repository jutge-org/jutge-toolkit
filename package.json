{
    "name": "@jutge.org/toolkit",
    "description": "Toolkit to prepare problems for Jutge.org",
    "version": "4.3.0",
    "homepage": "https://jutge.org",
    "author": {
        "name": "Jutge.org",
        "url": "https://jutge.org"
    },
    "contributors": [
        {
            "name": "Jordi Petit",
            "url": "https://github.com/jordi-petit"
        },
        {
            "name": "Pau Fern√°ndez",
            "url": "https://github.com/pauek"
        },
        {
            "name": "Cristina Raluca",
            "url": "https://github.com/ralucado"
        },
        {
            "name": "Jordi Reig",
            "url": "https://github.com/jordireig"
        }
    ],
    "repository": {
        "type": "git",
        "url": "git+https://github.com/jutge-org/jutge-toolkit.git"
    },
    "keywords": [
        "jutge.org",
        "cli",
        "command line interface"
    ],
    "publishConfig": {
        "access": "public"
    },
    "module": "index.ts",
    "type": "module",
    "bin": {
        "jutge-toolkit": "dist/index.js",
        "jtk": "dist/index.js",
        "jtk-dev": "toolkit/index.ts"
    },
    "scripts": {
        "lint": "eslint .",
        "format": "bun prettier --write .",
        "depcheck": "bunx depcheck",
        "dev": "bun build --target bun --outfile dist/index.js ./toolkit --watch",
        "build": "bun build --target bun --minify --outfile dist/index.js ./toolkit",
        "update-jutge-client": "(cd lib ; rm -f jutge_api_client.ts ; jutge clients typescript)"
    },
    "files": [
        "README.md",
        "dist",
        "toolkit",
        "docs",
        "assets"
    ],
    "dependencies": {
        "@commander-js/extra-typings": "^14.0.0",
        "@dicebear/collection": "^9.3.1",
        "@dicebear/core": "^9.3.1",
        "@eslint/js": "^9.39.2",
        "@inquirer/prompts": "^8.2.0",
        "archiver": "^7.0.1",
        "boxen": "^8.0.1",
        "bun-types": "^1.3.7",
        "chalk": "^5.6.2",
        "cli-highlight": "^2.1.11",
        "commander": "^14.0.2",
        "dayjs": "^1.11.19",
        "env-paths": "^4.0.0",
        "eslint": "^9.39.2",
        "execa": "^9.6.1",
        "handlebars": "^4.7.8",
        "image-size": "^2.0.2",
        "inquirer-checkbox-plus-plus": "^1.1.1",
        "nanoid": "^5.1.6",
        "open": "^11.0.0",
        "pretty-bytes": "^7.1.0",
        "pretty-ms": "^9.3.0",
        "radash": "^12.1.1",
        "semver": "^7.7.3",
        "sharp": "^0.34.5",
        "terminal-link": "^5.0.0",
        "tree-node-cli": "^1.6.0",
        "yaml": "^2.8.2",
        "zod": "^4.3.6",
        "zod-package-json": "^2.1.0",
        "zod-validation-error": "^5.0.0"
    },
    "devDependencies": {
        "@types/archiver": "^7.0.0",
        "@types/image-size": "^0.8.0",
        "@types/node": "^25.1.0",
        "@types/semver": "^7.7.1",
        "prettier": "^3.8.1",
        "typescript-eslint": "^8.54.0"
    },
    "peerDependencies": {
        "typescript": "^5.9.3"
    },
    "prettier": {
        "semi": false,
        "singleQuote": true,
        "trailingComma": "all",
        "tabWidth": 4,
        "useTabs": false,
        "arrowParens": "always",
        "printWidth": 120
    }
}
